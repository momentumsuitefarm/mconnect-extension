// === manifest.json ===
{
  "manifest_version": 3,
  "name": "Mconnect Stream Recorder",
  "version": "1.0",
  "description": "Detects and records streaming elements (video, canvas, div) on Mconnect.",
  "permissions": [
    "tabs",
    "scripting",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://console.momentumsuite.com/mlive"], //167.71.76.129:443
      "js": ["content.js"]
    }
  ]
}